# Diamond Lab Store - Frontend Staging Configuration
# Environment variables for staging builds and testing

# =============================================================================
# API Configuration
# =============================================================================
REACT_APP_API_BASE_URL=https://staging-api.diamondlabstore.com
REACT_APP_API_TIMEOUT=12000
REACT_APP_API_RETRY_ATTEMPTS=4

# =============================================================================
# Application Settings
# =============================================================================
REACT_APP_NAME=Diamond Lab Store (Staging)
REACT_APP_VERSION=1.0.0-staging
REACT_APP_ENVIRONMENT=staging
REACT_APP_PORT=3000

# =============================================================================
# Development Features (Partially Enabled for Testing)
# =============================================================================
REACT_APP_DEBUG_API=true
REACT_APP_ENABLE_DEBUG_COMPONENT=true
REACT_APP_ENABLE_HOT_RELOAD=false
REACT_APP_ENABLE_REACT_SCAN=false

# =============================================================================
# Security & Authentication
# =============================================================================
REACT_APP_SESSION_TIMEOUT=1800000
REACT_APP_JWT_REFRESH_THRESHOLD=300000
REACT_APP_ENABLE_SSL=true
REACT_APP_COOKIE_SECURE=true

# =============================================================================
# Localization (Hebrew RTL Support)
# =============================================================================
REACT_APP_DEFAULT_LANGUAGE=he
REACT_APP_RTL_ENABLED=true
REACT_APP_SUPPORTED_LANGUAGES=he,en

# =============================================================================
# UI/UX Configuration
# =============================================================================
REACT_APP_THEME=light
REACT_APP_ANIMATION_ENABLED=true
REACT_APP_PAGE_TRANSITION_DURATION=300
REACT_APP_TOAST_DURATION=5000

# =============================================================================
# File Upload Settings
# =============================================================================
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
REACT_APP_UPLOAD_CHUNK_SIZE=1048576

# =============================================================================
# Performance & Caching
# =============================================================================
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_CACHE_DURATION=300000
REACT_APP_IMAGE_LAZY_LOADING=true

# =============================================================================
# Third Party Services (Staging/Test Keys)
# =============================================================================
REACT_APP_GOOGLE_ANALYTICS_ID=G-STAGING-XXXXXXXXXX
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx
REACT_APP_SENTRY_DSN=https://staging-xxxxxxxxxx@sentry.io/xxxxxxx

# =============================================================================
# Build Configuration
# =============================================================================
REACT_APP_BUILD_VERSION=1.0.0-staging
REACT_APP_BUILD_DATE=
REACT_APP_CDN_URL=https://staging-cdn.diamondlabstore.com

# =============================================================================
# Development Tools (Enabled for Testing)
# =============================================================================
REACT_APP_ENABLE_REDUX_DEVTOOLS=true
REACT_APP_ENABLE_PROFILER=true 